    "moduleResolution": "node",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "lib/types",
